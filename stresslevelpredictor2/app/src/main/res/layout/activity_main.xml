<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Humidity"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/inputTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Temperature"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/inputStepCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Step Count"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/predictButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Predict Stress Level" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/foodContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/trackButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track Selected Foods"
        android:layout_marginTop="16dp" />
</LinearLayout>
