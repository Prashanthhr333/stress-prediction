<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/inputHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Humidity"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/inputTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Temperature"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/inputStepCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Step Count"
        android:inputType="number" />

    <Button
        android:id="@+id/predictButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predict Stress Level"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prediction Result"
        android:gravity="center"
        android:paddingTop="16dp"
        android:textSize="18sp" />
</LinearLayout>
